	@RequestMapping(value = "/one")
	public ModelAndView m1() {

		ModelAndView mav = new ModelAndView();
		String empName = "James";

		mav.addObject("ename", empName);
		mav.setViewName("disp");

		System.out.println("---- MyController m1 executed");
		return mav;
	}

